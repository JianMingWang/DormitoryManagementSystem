
@{
    ViewBag.Title = "SelectStudent";
    var F = Html.F();
}

@section script{
    <script>
        function btnSearch() {

        }
    </script>
}

@section body{
    @(F.Grid()
                .EnableCollapse(false)
                .ShowHeader(false)
                .ShowBorder(false)
                .ID("gridStudent")
                .EnableCheckBoxSelect(true)
                .AllowPaging(true)
                .PageSize(20)
                .DataIDField("ID")
                .DataTextField("Name")
                .Toolbars(
                    F.Toolbar()
                        .ID("btngroup")
                        .Items(
                            F.TextBox()
                                .ID("tbCollege")
                                .EmptyText("学院"),
                            F.TextBox()
                                .ID("tbMajor")
                                .EmptyText("班级"),
                            F.TextBox()
                                .ID("tbClassName")
                                .EmptyText("班级"),
                            F.DropDownList()
                                .ID("ddlSex")
                                .Width(100)
                                .Items(
                                    F.ListItem()
                                        .Value("all")
                                        .Text("所有性别"),
                                    F.ListItem()
                                        .Value("0")
                                        .Text("男"),
                                    F.ListItem()
                                        .Value("1")
                                        .Text("女")
                                ),
                            F.ToolbarSeparator()
                                .MarginLeft(10)
                                .MarginRight(10),
                            F.Button()
                                .ID("btnSearch")
                                .Text("新增")
                                .Listener("click", "btnSearch();")
                        )
                )
                .Columns(
                    F.RowNumberField(),
                    F.RenderField()
                        .HeaderText("学号")
                        .DataField("ID")
                        .TextAlign(TextAlign.Center)
                        .Width(120),
                    F.RenderField()
                        .HeaderText("学生姓名")
                        .DataField("Name")
                        .TextAlign(TextAlign.Center)
                        .Width(100)
                )
                .DataSource(ViewBag.gridStudent)
    )
}

